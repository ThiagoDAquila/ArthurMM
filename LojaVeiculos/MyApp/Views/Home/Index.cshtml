@model CustomUserSession
@{
    ViewData["Title"] = "Página Inicial";
    ViewData["Title"] = "Entrar";
    ViewData["LoginPath"] = "/Account/Login";
    ViewData["ReturnUrl"] = "/Account/Login";
}

<div class="row" style="margin-top: 2em">
@if (!Model.IsAuthenticated)
{
    <partial name="_SignInPartial" view-data='ViewData' />
}
else
{
    <div class="col-lg-12 text-center">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <img src="@Model.GetProfileUrl()" style="height:32px; margin-right:.5em">
            Olá @Model.DisplayName!
            <button type="submit" class="btn btn-link" style="margin:-6px 0 0 -6px">Sign Out</button>
        </form>
    </div>
}
</div>

